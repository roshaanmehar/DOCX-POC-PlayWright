# Set false for first run so you can log in manually; then true for headless
BROWSER_HEADLESS=false

# Named profile: use a name to load/save under data/browser-profiles/<name>. CLI --profile overrides this.
BROWSER_PROFILE=default
# Base directory for named profiles (default: ./data/browser-profiles)
BROWSER_PROFILES_DIR=./data/browser-profiles
# Legacy: single profile path when BROWSER_PROFILE is not set
BROWSER_PROFILE_DIR=./data/browser-profile

# Where to save downloaded .docx artifacts
RESULTS_DIR=./data/results

# Claude.ai
CLAUDE_URL=https://claude.ai
# Optional: URL to a specific Claude Project (e.g. https://claude.ai/project/xxx)
CLAUDE_PROJECT_URL=

# Timeouts (ms)
RESPONSE_WAIT_TIMEOUT=300000
STREAMING_POLL_INTERVAL=2000
