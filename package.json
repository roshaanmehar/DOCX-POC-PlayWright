{
  "name": "cv-formatter-claude-chat-poc",
  "version": "1.0.0",
  "description": "Minimal POC: automate Claude.ai to upload .docx, send analysis prompt, download result via persistent browser",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "process": "node src/index.js",
    "once": "node src/index.js --once",
    "profiles": "node src/index.js --list-profiles",
    "reset": "node src/index.js --reset",
    "postinstall": "npx playwright install chromium"
  },
  "dependencies": {
    "playwright": "^1.49.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "dotenv": "^16.4.7"
  },
  "engines": {
    "node": ">=18"
  }
}
